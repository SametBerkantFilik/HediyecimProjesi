<%- include("../partials/header") -%>

    <div class="container products-view-user">
        <form class="post-list">
            <input type="hidden" value="" />
        </form>
        <article class="navbar-form navbar-left p-0 m-0 ml-b">
            <div class="form-group">
                <label>Sayfa Başına: </label>
                <select class="form-control post_max">
				<option value="4">4</option>
				<option value="8">8</option>
				<option value="16">16</option>
			</select>
                <label>Anahtar Kelime Ara: </label>
                <input type="text" placeholder="Enter a keyword" class="form-control post_search_text" />
                <input type="submit" value="Filtrele" class="btn btn-primary post_search_submit" />
            </div>
        </article>
        <a href="/user/products/add" class="btn btn-success pull-right">Yeni Ürün Ekle</a><br class="clear" />
        <div class="wave-box-wrapper">
            <div class="wave-box"></div>
            <table class="table table-striped table-post-list no-margin">
                <thead>
                    <tr></tr>
                    <th>Resim</th>
                    <th id="name" class="active"><a href="#">İsim</a></th>
                    <th id="price"><a href="#">Fiyat</a></th>
                    <th id="status"><a href="#">Durum</a></th>
                    <th id="date"><a href="#">Tarih</a></th>
                    <th id="stock"><a href="#">Stok</a></th>
                    <th>Action</th>
                </thead>
                <tbody class="pagination-container"></tbody>
            </table>
            <div class="pagination-nav"></div>
        </div>
    </div>

    <%- include("../partials/footer") -%>